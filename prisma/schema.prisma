generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String?
  email       String    @unique
  password    String
  profileUrl  String    @default("https://tl.vhv.rs/dpng/s/541-5413387_log-in-sign-up-micro-environment-diagram-hd.png")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Lesson_One {
  id            Int     @id @default(autoincrement())
  hurufHijaiyah String
  colorCard     String
  hoverCard     String
  audio         String
}

model Lesson_Two {
  id                    Int     @id @default(autoincrement())
  hurufBerharakatFathah String
  colorCard             String
  hoverCard             String
  lessons               Lesson_Two_Content[]             
}

model Lesson_Two_Content {
  id                        Int         @id @default(autoincrement())
  hurufBerharakatFathahName String
  image                     String
  video                     String
  lessonTwo                 Lesson_Two  @relation(fields: [lessonTwoId], references: [id])
  lessonTwoId               Int
}

model Activity {
  id           Int       @id @default(autoincrement())
  activityName String 
  dateStarted  DateTime
  dateFinished DateTime
  value        Int
  passed       String
}